<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/calibrateRollValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/anton"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"></TextView>

        <Button
            android:id="@+id/startButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/calibrateRollValue"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"
            android:onClick="startMainActivity"
            android:text="Start" />

        <Button
            android:id="@+id/calibrateButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/startButton"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:onClick="setCalibrate"
            android:text="Calibrate" />

        <Button
            android:id="@+id/historyButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/calibrateButton"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:onClick="startHistoryActivity"
            android:text="History" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/historyButton"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:onClick="exitApplication"
            android:text="Exit" />

    </RelativeLayout>
</LinearLayout>